<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIBasics.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MAUIBasics.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MAUIBasics">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Ueber Uns"
        ContentTemplate="{DataTemplate views:AboutUsPage}"
        Route="AboutUsPage" />
    <ShellContent
       Title="Registrieren"
       ContentTemplate="{DataTemplate views:Registrierungsformular}"
       Route="Registrieren" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="Login" />

</Shell>
